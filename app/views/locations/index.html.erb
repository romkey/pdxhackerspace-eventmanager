<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Locations</h1>
  <%= link_to "Add New Location", new_location_path, class: "btn btn-primary" %>
</div>

<% if @locations.any? %>
  <div class="card">
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td><strong><%= location.name %></strong></td>
              <td><%= truncate(location.description, length: 100) %></td>
              <td>
                <%= link_to "Edit", edit_location_path(location), class: "btn btn-sm btn-outline-primary" %>
                <%= button_to "Delete", location_path(location), method: :delete, data: { turbo_confirm: "Are you sure? This will not delete events, but will remove location from them." }, class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i>
    No locations defined yet. <%= link_to "Create your first location", new_location_path %>.
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Back to Settings", edit_site_config_path, class: "btn btn-secondary" %>
</div>

