<% if user_signed_in? && (current_user.admin? || event.hosted_by?(current_user)) %>
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-journal-text"></i> Event Journal</h5>
    </div>
    <div class="card-body">
      <% journals = event.event_journals.includes(:user, :occurrence).recent_first.limit(50) %>
      
      <% if journals.any? %>
        <div class="timeline">
          <% journals.each do |journal| %>
            <div class="timeline-item mb-3 pb-3 <%= 'border-bottom' unless journal == journals.last %>">
              <div class="d-flex justify-content-between align-items-start">
                <div class="flex-grow-1">
                  <h6 class="mb-1">
                    <i class="bi bi-<%= journal.action.include?('cancel') ? 'x-circle' : (journal.action.include?('create') ? 'plus-circle' : 'pencil-square') %>"></i>
                    <%= journal.summary %>
                  </h6>
                  <small class="text-muted">
                    <i class="bi bi-person-circle"></i> <%= journal.user.name || journal.user.email %>
                    Â· 
                    <i class="bi bi-clock"></i> <%= time_ago_in_words(journal.created_at) %> ago
                    (<%= journal.created_at.strftime('%b %d, %Y at %I:%M %p') %>)
                  </small>
                  
                  <% if journal.change_data.present? && journal.change_data.any? %>
                    <div class="mt-2">
                      <% journal.formatted_changes.each do |field, field_changes| %>
                        <div class="small bg-light p-2 rounded mb-1">
                          <strong><%= field %>:</strong>
                          <% if field_changes.is_a?(Hash) && field_changes['from'] && field_changes['to'] %>
                            <div class="mt-1">
                              <div class="text-danger">
                                <del><%= truncate(field_changes['from'].to_s, length: 200) %></del>
                              </div>
                              <div class="text-success">
                                <%= truncate(field_changes['to'].to_s, length: 200) %>
                              </div>
                            </div>
                          <% else %>
                            <%= field_changes %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <% if event.event_journals.count > 50 %>
          <div class="text-center mt-3">
            <small class="text-muted">Showing most recent 50 of <%= event.event_journals.count %> entries</small>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted mb-0">No journal entries yet.</p>
      <% end %>
    </div>
  </div>
<% end %>

