<div class="row">
  <div class="col-lg-8 mx-auto">
    <h1><i class="bi bi-geo-alt-fill"></i> Location</h1>

    <% if @site_config.location_info.present? || @site_config.address.present? %>
      <% if @site_config.location_info.present? %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">About Our Location</h5>
            <%= simple_format(@site_config.location_info) %>
          </div>
        </div>
      <% end %>

      <% if @site_config.address.present? %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Address</h5>
            <p class="lead"><i class="bi bi-pin-map-fill"></i> <%= @site_config.address %></p>

            <div class="ratio ratio-16x9 mt-3">
              <iframe
                width="100%"
                height="450"
                style="border:0"
                loading="lazy"
                allowfullscreen
                referrerpolicy="no-referrer-when-downgrade"
                src="https://maps.google.com/maps?q=<%= ERB::Util.url_encode(@site_config.address) %>&t=&z=15&ie=UTF8&iwloc=&output=embed">
              </iframe>
            </div>
            <small class="text-muted d-block mt-2">
              <%= link_to "Open in Google Maps", "https://www.google.com/maps/search/?api=1&query=#{ERB::Util.url_encode(@site_config.address)}", target: "_blank", rel: "noopener", class: "text-decoration-none" %>
            </small>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-info">
        <p class="mb-0">Location information has not been configured yet.</p>
        <% if user_signed_in? && current_user.admin? %>
          <hr>
          <%= link_to "Configure Location Info", edit_site_config_path, class: "alert-link" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

