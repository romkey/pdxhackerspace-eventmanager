# Docker Environment Variables Example
# Copy this file to .env and update with your values
# Usage: cp env.docker.example .env

# ==========================================
# Database Configuration
# ==========================================
DATABASE_HOST=db
DATABASE_USER=eventmanager
DATABASE_PASSWORD=eventmanager_password
DATABASE_NAME=EventManager_development

# ==========================================
# Rails Configuration
# ==========================================
RAILS_ENV=development

# For production, generate with: docker-compose exec web rails secret
# SECRET_KEY_BASE=your_secret_key_here

# ==========================================
# Authentik OAuth Configuration (Optional)
# ==========================================
# Leave blank to use local authentication only
AUTHENTIK_CLIENT_ID=
AUTHENTIK_CLIENT_SECRET=
AUTHENTIK_SITE_URL=http://localhost:9000

# ==========================================
# Application Settings
# ==========================================
# Max number of database connections
RAILS_MAX_THREADS=5

# ==========================================
# Email/SMTP Configuration (Optional)
# ==========================================
# Required for sending host reminder emails
# Leave blank to disable email functionality
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_DOMAIN=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS=true

# Default "from" address for emails
MAILER_FROM_EMAIL=noreply@example.com

# ==========================================
# Host Configuration (for email links)
# ==========================================
RAILS_HOST=localhost
RAILS_PROTOCOL=http
RAILS_PORT=3000

